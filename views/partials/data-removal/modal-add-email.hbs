<div class="modal micromodal-slide" id="modal-add-email" aria-hidden="true">
  <div class="modal__overlay flx jst-cntr" tabindex="-1" data-micromodal-close>
    <div
      class="modal__container"
      role="dialog"
      aria-modal="true"
      aria-labelledby="modal-add-email-title"
    >
      <div class="flx space-between cntr modal__header">
        <h2 class="modal__title" id="modal-add-email-title">
          {{getRemoveString "remove-modal-add-email-title"}}
        </h2>
        <button
          class="modal__close"
          aria-label="Close modal"
          data-micromodal-close
        ></button>
      </div>
      <div class="modal__content" id="modal-add-email-content">
        <div class="remove-dashboard-add-email-form input-group">
            
            {{> forms/add-another-email-form }}
            {{#if lastAddedEmail}}
              <span class="dashboard-email-sent bold"> {{ getString "email-sent" }}</span>
              {{#each (getLastAddedEmailStrings)}}
                <p class="confirm-submit txt-cntr">{{{ this }}}</p>
              {{/each}}
            {{/if}}
          </div>
      </div>
      <div class="modal__footer flx space-between">
        <a
          class="modal__close-footer"
          href="#"
          role="button"
          data-micromodal-close
          aria-label="{{getRemoveString "remove-modal-close-accessible"}}"
        >{{getRemoveString "remove-modal-close"}}</a>
      </div>
    </div>
  </div>
</div>