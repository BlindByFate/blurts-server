{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "esnext",
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2020"
  },
  "include": ["src/**/*.js"],
  "exclude": ["node_modules"]
}
